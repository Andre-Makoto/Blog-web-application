<%- include("partials/header.ejs") %>
<main>
    <div class="container">
        <h1> Welcome to my Blog!</h1>
<p>This is a simple blog where you can create, view, edit, and delete your own posts. 
 Feel free to write anything you like and manage your personal posts with ease.
</p>

<hr>

<% if (locals.posts && posts.length > 0) { %>
    <% posts.forEach(function(post, index) { %>
      <div>
        <h2><%= post.title %></h2>
        <p><%= post.text %></p>
        <a href="/show/<%= index %>">Show full post</a>
        <a href="/edit/<%= index %>">Edit post</a>
        <a href="/delete/<%= index %>">Delete post</a>
      </div>
    <% }) %>
  <% } else { %>
    <p>No posts have been created yet. Start by <a href="/new">creating your first post</a>!</p>
  <% } %>
    </div>


</main>
<%- include("partials/footer.ejs") %> 